#!/bin/bash

# TYPE: export
# DESC: sets the main terminal prompt displayed on every line
export PS1='\[`tput setaf 014`\]\h\[`tput setaf 255`\]:${PWD}\n\[`tput setaf 200`\].../${PWD#"${PWD%/*/*}/"} \[`tput sgr0`\]$ '

# TYPE: export
# DESC: sets the continuation string for multi-line commands
export PS2='--> '

# TYPE: export
# DESC: sets the default file editor
export EDITOR="${EDITOR_APP}/Contents/MacOS/Sublime\ Text"

# TYPE: export
# DESC: add a python startup script
export PYTHONSTARTUP=${DOTFILES_DIR}/.pythonrc

# TYPE: export
# DESC: add 'tools' module to PYTHONPATH
export PYTHONPATH=$PYTHONPATH:$DOTFILES_DIR/python-tools

# TYPE: export
# DESC: Used to detect if iTerm is active terminal
export TERM_PROGRAM="iTerm"

# TYPE: export
# DESC: Python command to get the active script's directory
export SCRIPT_DIR="os.path.dirname(os.path.realpath(__file__))"

# TYPE: export
# DESC: ANSI Color (No Color)
export COLOR_NC='\e[0m'

# TYPE: export
# DESC: ANSI Color (White)
export COLOR_WHITE='\e[1;37m'

# TYPE: export
# DESC: ANSI Color (Black)
export COLOR_BLACK='\e[0;30m'

# TYPE: export
# DESC: ANSI Color (Blue)
export COLOR_BLUE='\e[0;34m'

# TYPE: export
# DESC: ANSI Color (Light Blue)
export COLOR_LIGHT_BLUE='\e[1;34m'

# TYPE: export
# DESC: ANSI Color (Green)
export COLOR_GREEN='\e[0;32m'

# TYPE: export
# DESC: ANSI Color (Light Green)
export COLOR_LIGHT_GREEN='\e[1;32m'

# TYPE: export
# DESC: ANSI Color (Cyan)
export COLOR_CYAN='\e[0;36m'

# TYPE: export
# DESC: ANSI Color (Light Cyan)
export COLOR_LIGHT_CYAN='\e[1;36m'

# TYPE: export
# DESC: ANSI Color (Red)
export COLOR_RED='\e[0;31m'

# TYPE: export
# DESC: ANSI Color (Light Red)
export COLOR_LIGHT_RED='\e[1;31m'

# TYPE: export
# DESC: ANSI Color (Purple)
export COLOR_PURPLE='\e[0;35m'

# TYPE: export
# DESC: ANSI Color (Light Purple)
export COLOR_LIGHT_PURPLE='\e[1;35m'

# TYPE: export
# DESC: ANSI Color (Brown)
export COLOR_BROWN='\e[0;33m'

# TYPE: export
# DESC: ANSI Color (Yellow)
export COLOR_YELLOW='\e[1;33m'

# TYPE: export
# DESC: ANSI Color (Gray)
export COLOR_GRAY='\e[0;30m'

# TYPE: export
# DESC: ANSI Color (Light Gray)
export COLOR_LIGHT_GRAY='\e[0;37m'
